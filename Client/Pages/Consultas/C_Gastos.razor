@page "/Consultagasto"
@inject HttpClient httpClient



<EditForm Model="L_Gastos">

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header">
                <h4>Consulta de Gastos</h4>
            </div>

            <div class="card-body">
                <div class="input-group mb-3">
                    <InputText @bind-Value="Asunto" class="form-control" aria-describedby="buscarButton" />
                    <button @onclick="Buscar" class="btn btn-outline-primary" type="button" id="buscarButton">
                        <i class="oi oi-magnifying-glass" />
                    </button>
                </div>

                <table class="table table-responsive table-condensed table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>GastoId</th>
                            <th>Fecha</th>
                            <th>Descripci√≥n</th>
                            <th>Metodo de pago</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gasto in L_Gastos)
                        {
                            <tr>
                                <td>@gasto.GastoId</td>
                                <td>@gasto.Fecha</td>
                                <td>@gasto.Descripcion</td>
                                <td>@gasto.MetodoDePago</td>
                                <td>@gasto.Total</td>
                               
                                
                                
                                <td><a class="btn btn-outline-primary" href="ocupacion/@gasto.Fecha">Ver</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="form-row justify-content-sm-between" aria-orientation="vertical">
                    <div class="col-3">
                        <label for="CantidaRegistro" class="col-form-label"><strong>Filas</strong>&nbsp;</label>
                        <input id="CantidaRegistro" @bind-value="@Conteo" disabled class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code
{
    public string Asunto  { get; set; } = "";
    public int Conteo { get; set; } = 0;
    public Gastos gastos { get; set; } = new Gastos();
    public GastosDetalle gastosDetalle { get; set; } = new GastosDetalle();
    public List<Gastos> L_Gastos { get; set; } = new List<Gastos>();
    public List<GastosDetalle> L_GastosDetalle { get; set; } = new List<GastosDetalle>();

    protected override async Task OnInitializedAsync()
    {
        var gastos = await httpClient.GetFromJsonAsync<List<Gastos>>($"api/Gastos");

        if(gastos is not null)
        {
            L_Gastos = gastos;
        }
    }
    public async Task Buscar()
    {
        L_Gastos = await httpClient.GetFromJsonAsync<List<Gastos>>($"api/Gastos");

        Conteo = L_Gastos  != null ? L_Gastos!.Count() : 0;
        StateHasChanged();
    }  
}